generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  category  String
  author    String
  excerpt   String?
  status    String   @default("draft")
  createdAt DateTime @default(now()) @map("created_at")
  publishedAt DateTime? @map("published_at")
  imageUrl  String?  @map("image_url")

  @@map("blogs")
}

model Service {
  id                Int           @id @default(autoincrement())
  name              String
  description       String?
  icon              String?
  availableDates    DateTime[]    @default([])
  timeSlots         String[]      @default([])
  availableSessions String[]      @default(["morning", "afternoon", "evening"])
  createdAt         DateTime      @default(now()) @map("created_at")
  appointments      Appointment[]

  @@map("services")
}

model Appointment {
  id              Int      @id @default(autoincrement())
  name            String
  email           String
  phone           String
  description     String?
  appointmentDate DateTime @map("appointment_date")
  status          String   @default("pending")
  session         String?
  timeSlot        String?   @map("time_slot")
  serviceId       Int      @map("service_id")
  doctorId        Int?     @map("doctor_id")
  createdAt       DateTime @default(now()) @map("created_at")
  
  // Foreign keys with proper onDelete behavior
  service         Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  doctor          Doctor?  @relation(fields: [doctorId], references: [id], onDelete: SetNull)

  @@map("appointment")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      AdminRole @default(ADMIN)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  
  // Back-reference to Doctor (one User can have one Doctor profile)
  doctor    Doctor?
}

enum AdminRole {
  ADMIN
  SUPERADMIN
  DOCTOR
}

model Doctor {
  id             Int           @id @default(autoincrement())
  name           String
  specialization String
  email          String
  phone          String
  service        String
  status         String        @default("available")
  createdAt      DateTime      @default(now()) @map("created_at")
  
  // Foreign key linking Doctor to User account
  userId         Int?          @unique @map("user_id")
  user           User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  appointments   Appointment[]

  @@map("doctors")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?     @map("user_id")
  userEmail String?  @map("user_email")
  action    String
  entity    String?
  entityId  Int?     @map("entity_id")
  details   Json?
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  status    String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("audit_logs")
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}
